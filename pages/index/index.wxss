page{
  height: 100%;
}
.main{
  background: #f3f5f7;
  height: 100%;
}
.page-section{
  height: 369rpx;
  margin-bottom: 10rpx;
}
.page-section image{
  width: 100%;
  height: 100%;
}
.title{
  height:80rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  background: #fff;
  color: #333333;
}
.title image{
  width: 2rpx;
  height: 100%;
  margin-right: 32rpx;
}
swiper{
  height: 369rpx;
}
.scroll-view-item{
  height: 190rpx;
  background: #fff;
  padding: 30rpx;
  margin-top: 2rpx;
}
.scroll-view-item .view-item{
  display: flex;
  height: 100%;
}
.scroll-view-item .left_img{
  width: 250rpx;
  height: 100%;
  overflow: hidden;
  border-radius: 9rpx;
  margin-right: 20rpx;
}
.scroll-view-item .left_img image{
  width: 100%;
  height: 100%;
}

.right_view{
  width: 378rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.right_view text{
  font-size: 30rpx;
  line-height: 50rpx;
  color: #333;
}
.right_view .price{
  color: #ff7250;
}
.right_view view{
  /* height: 25rpx; */
  display: flex;
  justify-content: space-between;
}
.right_view view view text{
  color: #999;
}
.right_view view view image{
  height: 24rpx;
  width: 22rpx;
  margin-top: 12rpx;
  margin-right: 9rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.loadText{
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 25rpx;
  color: #666;
  line-height: 80rpx;
  height: 80rpx;
}