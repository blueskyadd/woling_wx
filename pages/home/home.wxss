/* pages/home/home.wxss */
page{
  height: 100%;
}
.home_main{
  position: relative;
  height: 100%;
}
.titleBg{
    height: 360rpx;
    position: relative;
}
.titleBg .imgBg{
    width: 100%;
    height: 100%;
}
.titleBg .main{ 
    position: absolute;
    top: 64rpx;
    width: 100%;
}
.titleBg .title{
    font-size: 34rpx;
    color: #fff;
    width: 100%;
    display: flex;
    justify-content: center;
}
.titleBg .portrait{
    height: 103rpx;
    padding: 0 59rpx;
    display: flex;
    

}
.titleBg .portrait image{
    height: 103rpx;
    width: 103rpx;
    border-radius: 50%;
    margin-right: 34rpx;
}
.titleBg .main_title{
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding-top: 18rpx;
}

.titleBg .portrait text{
    font-size: 24rpx;
    color: #fff;
    
}
.titleBg .portrait .userName{
    line-height: 49rpx;
}
.titleBg .portrait .phone{
    line-height: 36rpx;
}
.main_list{
    margin-top: 50rpx;
    background: #fff;
    border-radius: 5rpx;
    width: calc(100% - 104rpx);
    margin: 0 30rpx;
    height: calc(100% - 400rpx);
    overflow: hidden;
    position: absolute;
    top: 325rpx;
    box-shadow: 0 0 10rpx 3rpx #b4b4b4;
    padding: 20rpx 22rpx 0;
}
.main_list .title{
  height:35rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  background: #fff;
  color: #333333;
  padding-bottom: 9rpx;
  border-bottom: 1px solid #eeeeee;

}
.main_list .list{
  height: 100%;
}
.main_list .title image{
  width: 2rpx;
  height: 100%;
  margin-right: 32rpx;
}
.main_list swiper{
  height: 369rpx;
}
.scrollview{
  height: calc(100% - 36rpx);
}
.main_list .scroll-view-item{
  height: 190rpx;
  background: #fff;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}
.main_list .scroll-view-item .view-item{
  display: flex;
  height: 100%;
}
.main_list .scroll-view-item .left_img{
  width: 250rpx;
  height: 100%;
  overflow: hidden;
  border-radius: 9rpx;
  margin-right: 20rpx;
}
.main_list .scroll-view-item .left_img image{
  width: 100%;
  height: 100%;
}

.main_list .right_view{
  width: 378rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.main_list .right_view text{
  font-size: 30rpx;
  line-height: 50rpx;
  color: #333;
}
.main_list .right_view .price{
  color: #ff7250;
}
.main_list .right_view view{
  /* height: 25rpx; */
  display: flex;
  justify-content: space-between;
}
.main_list .right_view view view text{
  color: #999;
}
.main_list .right_view view view image{
  height: 24rpx;
  width: 22rpx;
  margin-top: 12rpx;
  margin-right: 9rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}